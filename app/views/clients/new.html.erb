<h1>client form</h1>

<%= form_with model: @client do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
  </div>


  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email%>
  </div>

  
  <div>
    <%= form.label :password %><br>
    <%= form.text_area :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<%=link_to "Back","/" %>
